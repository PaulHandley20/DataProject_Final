import sqlite3
import pandas as pd
import os

# 1. Definimos la ruta (ajustada a tu nueva carpeta)
# Si tu notebook está en la raíz de 'DataProject_FINAL', la ruta es:
ruta_db = "Datos en bruto/database.sqlite"

try:
    # 2. Conectamos a la base de datos SQL
    conn = sqlite3.connect(ruta_db)
    print("✅ Conexión exitosa a la base de datos.")

    # 3. Consulta SQL para unir 3 fuentes (Partidos, Ligas y Equipos)
    # Esto cumple el requisito de 'mínimo dos conjuntos de datos'
    query = """
    SELECT 
        m.*, 
        l.name AS league_name, 
        ht.team_long_name AS home_team_name, 
        at.team_long_name AS away_team_name
    FROM Match m
    JOIN League l ON l.id = m.league_id
    JOIN Team ht ON ht.team_api_id = m.home_team_api_id
    JOIN Team at ON at.team_api_id = m.away_team_api_id
    """

    # 4. Cargamos el resultado en un DataFrame
    df = pd.read_sql_query(query, conn)
    
    # Cerramos la conexión por buena práctica
    conn.close()

    print(f"✅ Ingesta completada.")

except Exception as e:
    print(f"❌ Error: {e}")

